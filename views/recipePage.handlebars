{{!-- Formatted header all on main --}}
   <main class="content">
     <aside class="side-container">
       <div class="feature-div">

        <button id="bean-button" >Click to add some beans!</button>

        <div class = "bean-section">
          <div class="vertical-menu">
            
            <div class = "beanEntry">This is 1</div>
            <div class = "beanEntry">This is 2</div>
            <div class = "beanEntry">This is 3</div>
            <div class = "beanEntry">This is 4</div>
            <div class = "beanEntry">This is 5</div>
            <div class = "beanEntry">This is 6</div>
          </div> 
         </div>
       </div>

       <div class="feature-div">
         <!-- https://javascript.plainenglish.io/build-a-pomodoro-timer-using-html-css-and-javascript-7a7a8410052c -->
          <div class="outer-ring" id="outer-ring">
            <div class="timer"></div>
          </div>
        </div>
 
     </aside>
 
 
     <section class="directions">
       <div class="selectors">
         <div id="espressoSelector" class="hidden">
           <p>Espresso Drinks</p>
           <select  name="espressoDrinkSelect" onchange="getDrinkSelect()">
               <option selected value="">Affogato</option>
               <option>Americano</option>
               <option>Cappuccino</option>
               <option>Cortado</option>
               <option>Espresso</option>
               <option>Latte</option>
               <option>Mocha</option>
               <option>Red Eye</option>
               <option>Sparkling Americano</option>
           </select>
         </div>
          <div id="filterSelector" class="hidden">
            <p>Filter Coffee</p>
            <select name="filterSelect" onchange="getDrinkSelect()">
                <option selected value="">Aeropress</option>
                <option>Chemex</option>
                <option>Clever Dripper</option>
                <option>French Press</option>
                <option>Kalita Wave</option>
                <option>Moka Pot</option>
                <option>Orimgami</option>
                <option>Stagg X</option>
                <option>V60</option>
                </select>
          </div>
     </div>
         {{> recipe}}  
     </section>
 </main>
 
 <div id="modal-backdrop" class="hidden"></div>
   <div id="bean-counter-modal" class="hidden">
     <div class="modal-dialog">
  
         <div class="modal-header">
             <h3>Add bag of beans:</h3>
             <button type="button" id="modal-close" class="modal-hide-button">&times;</button>
         </div>
  
     <div class="modal-body">
          <div class="input">
            <label for="text-entry">Name:</label>
            <input type="text" class="text-entry" id ="name-input"></input>
          </div>

          <div class="input">
            <label for="text-entry">Weight (in grams):</label>
            <input type="number" class="text-entry" id="weight-input"></input>
          </div>

          <div class ="input-button">
            
            <fieldset id ="roast-level">
              <legend> Roast Level:</legend>
              <div>
                <input type="radio" id="light" name="roast" value = "light">
                <label for= "light">Light</label>
              </div>  

              <div>
                <input type="radio" id="medium" name="roast" value = "medium">
                <label for= "light">Medium</label>
              </div>

              <div>
                <input type="radio" id="dark" name="roast" value = "dark">
                <label for= "light">Dark</label>
              </div>
            </fieldset>

          </div>

          <div class="input">
            <label for="text-entry">Notes:</label>
            <input type="text" class="text-entry" id="note-input"></input>
          </div>

          <div class ="submit">
            <button type="button" id="modal-submit" class = "create-entry">Add bag of beans</button>
          </div>

      
      </div>
  
     <div class="modal-footer">
     </div>
  
     </div>
  </div>
</body>
